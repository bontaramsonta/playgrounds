{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "files.associations": {
    "*.css": "postcss"
  },
  "files.exclude": {
    "apps/*/.vscode": true,
    "**/.eslintrc.js": true,
    "**/tsconfig.json": true,
    "**/node_modules": true,
    "//apps/cpp-playground": true,
    "//apps/rust": true,
    "//apps/node": true,
    "//apps/web": true,
    "//apps/react": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}